<com.example.countries.CountryItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/image_country_flag"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:importantForAccessibility="no"
        />

        <TextView
            android:id="@+id/country_name"
            android:layout_toRightOf="@id/image_country_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Name"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/country_name"
        android:paddingLeft="97dp">
    <TextView
        android:id="@+id/country_capital"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="left"
        android:layout_toRightOf="@id/country_name"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        android:text="Capital"/>

    <TextView
        android:id="@+id/country_area"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="left"
        android:layout_toRightOf="@id/country_name"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        android:text="Capital"/>
    <TextView
        android:id="@+id/country_population"
        android:layout_alignParentLeft= "true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="left"
        android:layout_toRightOf="@id/country_name"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="12sp"
        android:text="Population"
        />
    </LinearLayout>
</com.example.countries.CountryItemView>